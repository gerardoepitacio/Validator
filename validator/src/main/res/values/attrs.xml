<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text_error" format="string" />
    <attr name="type_validator" format="enum">
        <enum name="text" value="0" />
        <enum name="number" value="1" />
        <enum name="date" value="2" />
        <enum name="time" value="3" />
        <enum name="datetime" value="4" />
        <enum name="email" value="5" />
        <enum name="url" value="6" />
        <enum name="phone" value="7" />
        <enum name="name" value="8" />
    </attr>

    <declare-styleable name="ValidateTextInputLayout">
        <attr name="type_validator" />
        <attr name="text_error" />
    </declare-styleable>

    <declare-styleable name="ValidateEditText">
        <attr name="type_validator" />
        <attr name="text_error" />
    </declare-styleable>

</resources>
